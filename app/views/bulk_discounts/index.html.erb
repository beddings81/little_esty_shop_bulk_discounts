<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Items', merchant_items_path, class: 'link_1', style: 'pull-right' %>
      <li><%= link_to 'Invoices', merchant_invoices_path, class: 'link_1', style: 'pull-right' %>
    </ul>
  </nav>
</div>

<h1><%= @merchant.name %>'s Discounts</h1>
<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %>
<div id="discounts">
  <ol>
  <% @merchant.bulk_discounts.each do |discount| %>
    <div id="discount_<%= discount.id %>">
      <li><%= link_to "Discount ##{discount.id}", merchant_bulk_discount_path(@merchant, discount) %> Discount: <%= discount.percent_discount %>% | Quantity Threshold: <%= discount.quantity_threshold %> items | <%= link_to "Delete Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount), method: :delete %></p>
    </div>
  <% end %>
  </ol>
</div>

<div id="holidays">
  <h3> Upcoming Holidays </h3>
  <% @holidays.each do |holiday| %>
    <p><%= holiday.name %>: <%= holiday.date %></p>
  <% end %>
</div>
  